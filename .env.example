# ============================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# ============================================================

# MongoDB Configuration (Use MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=factchecker

# Redis Configuration (Railway will provide this automatically)
# Format: redis://default:password@host:port
REDIS_URL=${REDIS_URL}

# Storage Mode
STORAGE_MODE=local
LOCAL_STORAGE_PATH=./storage

# API Configuration (Railway sets PORT automatically)
API_HOST=0.0.0.0
API_PORT=${PORT}
DEBUG=False

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# ============================================================
# API KEYS - REQUIRED FOR FUNCTIONALITY
# ============================================================

# OCR.space API (Required for image processing)
# Get free key: https://ocr.space/ocrapi
# Free tier: 25,000 requests/month
OCR_SPACE_KEY=

# Google Fact Check API (Required for fact-checking)
# Get key: https://console.cloud.google.com/
# Enable "Fact Check Tools API"
# Free tier: 1,000 requests/day
GOOGLE_FACTCHECK_KEY=

# SerpAPI (Optional - for better web search)
# Get key: https://serpapi.com/
# Free tier: 100 searches/month
SERPAPI_KEY=

# ============================================================
# LLM CONFIGURATION - CHOOSE ONE
# ============================================================

# Option 1: OpenRouter (Recommended - has free models)
# Get key: https://openrouter.ai/
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini:free
OPENROUTER_SITE_URL=https://your-app.railway.app
OPENROUTER_SITE_NAME=SatyaMatrix-FactChecker

# Option 2: OpenAI (Paid)
# OPENAI_API_KEY=

# Option 3: Google Gemini (Free tier available)
# GEMINI_API_KEY=

# ============================================================
# INNOVATION MODULES (OPTIONAL)
# ============================================================

# Neo4j Configuration (Optional - for CMTE & CRG graph features)
# Get free instance: https://neo4j.com/cloud/aura/
NEO4J_URI=
NEO4J_USER=neo4j
NEO4J_PASSWORD=

# CMTE Settings (Phase 1 - Mutation Tracking)
CMTE_SIMILARITY_THRESHOLD=0.85
CMTE_MAX_FAMILY_SIZE=100
CMTE_ENABLE_IMAGE_TRACKING=false

# NRI Settings (Phase 2 - Narrative Analysis)
NRI_ENABLE_NARRATIVE_CLASSIFICATION=true
NRI_ENABLE_CORRECTIVE_MESSAGING=true
NRI_NARRATIVE_CONFIDENCE_THRESHOLD=0.7

# CRG Settings (Phase 3 - Trust Networks)
CRG_ENABLE_TRUST_SCORING=true
CRG_PAGERANK_ITERATIONS=20
CRG_MIN_TRUST_SCORE=0.3

# RTR Settings (Phase 4 - Real-Time Monitoring)
RTR_ENABLE_REALTIME_TRACKING=true
RTR_UPDATE_INTERVAL_SECONDS=5

# ============================================================
# CORS CONFIGURATION (For Django Integration)
# ============================================================
# Add your Django domain here
ALLOWED_ORIGINS=https://satyamatrix.onrender.com,http://localhost:8000
